# ===========================================
# Gamebloc Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# ---------- MongoDB ----------
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/gamebloc?retryWrites=true&w=majority

# ---------- NextAuth ----------
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ---------- Google OAuth (optional) ----------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ---------- API-Football (RapidAPI) ----------
# Sign up at https://rapidapi.com/api-sports/api/api-football
# Sports data powered by ESPN Public API â€” no key needed

# ---------- App Config ----------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000
